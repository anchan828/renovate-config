{
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)"
  ],
  "automerge": true,
  "dependencyDashboard": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "majorPackages"
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "groupName": "dependencies"
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "devDependencies"
    }
  ]
}
