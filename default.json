{
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)"
  ],
  "automerge": true,
  "dependencyDashboard": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "Docker images"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "majorPackages"
    },
    {
      "matchDepTypes": [
        "dependencies",
        "peerDependencies",
        "devDependencies"
      ],
      "groupName": "All dependencies"
    }
  ]
}
